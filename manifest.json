{
   "description": "Servidor de Bot",
   "manifest_version":2,
   "name": "Bot365_server",
   "permissions": [ 
      "storage",
      "unlimitedStorage",
      "tabs",
      "http://localhost:1313/*",
      "https://bot-ao.com/*",
      "https://www.bet365.bet.br/*",
      "https://www.totalcorner.com/*"
    ],
   "version": "0.5.0",
   "background": {
    "scripts": ["shared.js","background.js"]
  },
   "content_scripts": [
    {
      "matches": [
         "https://www.bet365.bet.br/*", "https://www.totalcorner.com/*"
      ],
      "js": ["shared.js","content.js"]
    }
  ]
}


